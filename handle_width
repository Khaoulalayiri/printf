/**
 * handle_width - handles the width field in the format specifier
 * @format: the format string
 * @params: the parameter struct
 * @ap: the va_list
 *
 * Return: pointer to the next character after handling the width field
 */
const char *handle_width(const char *format, params_t *params, va_list ap)
{
    if (*format == '*')
    {
        params->width = va_arg(ap, int);
        if (params->width < 0)
        {
            params->flags |= FLAG_MINUS;
            params->width = -params->width;
        }
        format++;
    }
    else
    {
        params->width = 0;
        while (isdigit(*format))
        {
            params->width = params->width * 10 + (*format - '0');
            format++;
        }
    }

    return format;
}

/**
 * handle_flags - handles the flags in the format specifier
 * @format: the format string
 * @params: the parameter struct
 *
 * Return: pointer to the next character after handling the flags
 */
const char *handle_flags(const char *format, params_t *params)
{
    while (*format)
    {
        if (*format == '-')
            params->flags |= FLAG_MINUS;
        else if (*format == '+')
            params->flags |= FLAG_PLUS;
        else if (*format == ' ')
            params->flags |= FLAG_SPACE;
        else if (*format == '0')
            params->flags |= FLAG_ZERO;
        else if (*format == '#')
            params->flags |= FLAG_HASH;
        else
            break;

        format++;
    }

    return format;
}
